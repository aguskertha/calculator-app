<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_recent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:gravity="end"
        android:textColor="#B3FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/edt_display"
        app:layout_constraintEnd_toEndOf="@+id/edt_display"
        app:layout_constraintStart_toStartOf="@+id/edt_display" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_img_back"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_circle_black"
            app:layout_constraintBottom_toBottomOf="@+id/btnDot"
            app:layout_constraintStart_toEndOf="@+id/btnDot"
            app:srcCompat="@drawable/ic_backspace__1_" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background_circle_gold"
            android:fontFamily="@font/lato_bold"
            android:text="="
            android:textColor="@color/white"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toBottomOf="@+id/btn_img_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_img_back" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="4"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn1"
            app:layout_constraintStart_toStartOf="@+id/btn1" />

        <ImageButton
            android:id="@+id/btn_img_multiple"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            app:layout_constraintBottom_toTopOf="@+id/btn_img_minus"
            app:layout_constraintEnd_toEndOf="@+id/btn_img_minus"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:srcCompat="@drawable/ic_perkalian" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="6"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn3"
            app:layout_constraintStart_toEndOf="@+id/btn5" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="8"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn5"
            app:layout_constraintStart_toEndOf="@+id/btn7" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="1"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn0"
            app:layout_constraintStart_toStartOf="@+id/btn0" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="0"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            android:fontFamily="@font/lato_bold"
            android:text="AC"
            android:textColor="#C96100"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn7"
            app:layout_constraintStart_toStartOf="@+id/btn7"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="9"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn6"
            app:layout_constraintStart_toEndOf="@+id/btn8" />

        <ImageButton
            android:id="@+id/btn_img_percentage"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            app:layout_constraintBottom_toTopOf="@+id/btn9"
            app:layout_constraintStart_toEndOf="@+id/btn_img_plusminus"
            app:layout_constraintTop_toTopOf="@+id/btn_img_plusminus"
            app:srcCompat="@drawable/ic_percentage" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="."
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toBottomOf="@+id/btn0"
            app:layout_constraintStart_toEndOf="@+id/btn0" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="2"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btnDot"
            app:layout_constraintStart_toEndOf="@+id/btn1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="5"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn2"
            app:layout_constraintStart_toEndOf="@+id/btn4" />

        <ImageButton
            android:id="@+id/btn_img_add"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            app:layout_constraintBottom_toTopOf="@+id/btnEqual"
            app:layout_constraintEnd_toEndOf="@+id/btnEqual"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            app:srcCompat="@drawable/ic_penambahan" />

        <ImageButton
            android:id="@+id/btn_img_division"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            app:layout_constraintBottom_toTopOf="@+id/btn_img_multiple"
            app:layout_constraintEnd_toEndOf="@+id/btn_img_multiple"
            app:layout_constraintStart_toEndOf="@+id/btn_img_percentage"
            app:layout_constraintTop_toTopOf="@+id/btn_img_percentage"
            app:srcCompat="@drawable/ic_pembagian" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="3"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn_img_back"
            app:layout_constraintStart_toEndOf="@+id/btn2" />

        <ImageButton
            android:id="@+id/btn_img_minus"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            app:layout_constraintBottom_toTopOf="@+id/btn_img_add"
            app:layout_constraintEnd_toEndOf="@+id/btn_img_add"
            app:layout_constraintStart_toEndOf="@+id/btn6"
            app:srcCompat="@drawable/ic_pengurangan" />

        <ImageButton
            android:id="@+id/btn_img_plusminus"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_gray"
            app:layout_constraintBottom_toTopOf="@+id/btn8"
            app:layout_constraintStart_toEndOf="@+id/btnAC"
            app:layout_constraintTop_toTopOf="@+id/btnAC"
            app:srcCompat="@drawable/ic_plus_minus" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="@dimen/all_width_size"
            android:layout_height="@dimen/all_height_size"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_black"
            android:fontFamily="@font/lato_bold"
            android:text="7"
            android:textSize="@dimen/all_font_size"
            app:layout_constraintBottom_toTopOf="@+id/btn4"
            app:layout_constraintStart_toStartOf="@+id/btn4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edt_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:fontFamily="@font/lato_bold"
        android:gravity="end"
        android:inputType="textPersonName"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>